extends ../publictemplate/common
block admin
 .mws-panel.grid_8
  .mws-panel-header
    span 管理员添加
  .mws-panel-body.no-padding
    form.mws-form(action='/adminuserdoadd' method='POST')
      .mws-form-inline
        .mws-form-row
          label.mws-form-label 管理员名称
          .mws-form-item
            input.large(type='text' name="uname")
        .mws-form-row
          label.mws-form-label 密码
          .mws-form-item
            input.large(type='password' name="pwd")
      .mws-button-row
        input.btn.btn-danger(type='submit' value='添加')
        input.btn(type='reset' value='重置')
block title 
    | 管理员添加        
        


