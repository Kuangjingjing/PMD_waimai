extends ../publictemplate/common
block admin
 .mws-panel.grid_8
  .mws-panel-header
    span
      i.icon-table
      |  会员列表
  .mws-panel-body.no-padding
    #DataTables_Table_0_wrapper.dataTables_wrapper(role='grid')
      #DataTables_Table_0_filter.dataTables_filter
        form(action="/usersearch" method="get") 
            label
            | 会员搜索: 
            input(type='text' name="keyword" aria-controls='DataTables_Table_0' placeholder="请输入用户名")
            input(type="submit" value="搜索" class="btn btn-primary")
      table#DataTables_Table_0.mws-datatable.mws-table.dataTable(aria-describedby='DataTables_Table_0_info')
        thead
          tr(role='row')
            th.sorting_asc(role='columnheader' tabindex='0' aria-controls='DataTables_Table_0' rowspan='1' colspan='1' aria-sort='ascending' aria-label='Rendering engine: activate to sort column descending' style='width: 258px;') 序号
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_0' rowspan='1' colspan='1' aria-label='Browser: activate to sort column ascending' style='width: 333px;') 会员名称
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_0' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 308px;') 密码
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_0' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 226px;') 操作
        tbody(role='alert' aria-live='polite' aria-relevant='all')
         -for(let i=0;i<datas.length;i++)
          tr.odd
            td=datas[i].id
            td=datas[i].username
            td=datas[i].pass
            td
                a.btn.btn-primary(href=`/usersinfo?username=${datas[i].username}`) 会员详细信息 
                a.btn.btn-info(href=`/usersaddress?username=${datas[i].username}`) 会员收货地址 
